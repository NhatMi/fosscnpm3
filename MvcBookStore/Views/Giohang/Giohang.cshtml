@using MvcBookStore.Models
@model List<Giohang>
@{
    ViewBag.Title = "Giohang";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<h2 style="text-align: center"> THÔNG TIN GIỎ HÀNG</h2>
<div class="container-fluid pt-5">
<div class="row px-xl-5">
    <div class="col-lg-8 table-responsive mb-5">
        <table class="table table-bordered text-center mb-0">
            <thead class="bg-secondary text-dark">
                <tr>
                    <th>Các sản phẩm</th>
                    <th>Giá</th>
                    <th>Số lượng</th>
                    <th>Tổng cộng</th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="align-middle">
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle"><img src="~/imgs/@item.sAnhbia" alt="" style="width: 50px;"> @item.sTensach</td>
                        @using (Html.BeginForm("CapnhatGiohang", "Giohang", new { @iMaSP = item.iMasach }))
                        {
                            <td class="align-middle">@String.Format("{0:0,0}", item.dDongia)</td>
                            <td class="align-middle">@String.Format("{0:0,0}", item.iSoluong)</td>
                            <td class="align-middle">
                                <div class="input-group quantity mx-auto" style="width: 100px;">
                                    <div class="input-group-btn">
                                        <button class="btn btn-sm btn-primary btn-minus">
                                            <i class="fa fa-minus"></i>
                                        </button>
                                    </div>
                                    <input type="text" class="form-control form-control-sm bg-secondary text-center" value="1">
                                    <div class="input-group-btn">
                                        <button class="btn btn-sm btn-primary btn-plus">
                                            <i class="fa fa-plus"></i>
                                        </button>
                                    </div>
                                </div>
                            </td>
                            <td class="align-middle">@String.Format("{0:0,0}", item.dThanhtien)</td>
                            <td class="align-middle">@Html.ActionLink("Xóa", "XoaGiohang", new { @iMaSP = item.iMasach })</td>
                            <td> <a href="@Url.Action("Details", "BookStore", new { id = item.iMasach})"> Chi tiết</a></td>
                            <td> </td>
                            <td> <input type="submit" value="Cập nhật" /></td>

                        }
                    </tr>

                }
                <tr style="font-weight: bold; text-align: right; color: red">
                    <td colspan="4"> Số lượng: @ViewBag.Tongsoluong</td>
                    <td colspan="4"> Tổng tiền: @String.Format("{0:0,0}", ViewBag.Tongtien) VNĐ</td>
                </tr>
                <tr style="font-weight: bold; text-align:right; color: blue">
                    <td colspan="9">
                        @Html.ActionLink("Xóa Giỏ Hàng", "XoaTacaGiohang")
                    </td>
                </tr>
                <tr style="font-weight: bold; color:blue; text-align:right ">
                    <td colspan="9" align="center">
                        @Html.ActionLink("ĐẶT HÀNG", "Dathang", "Giohang")
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
