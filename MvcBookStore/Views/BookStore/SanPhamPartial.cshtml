@model IEnumerable<MvcBookStore.Models.SACH>
@using MvcBookStore.Models;
@*@using PagedList;
@using PagedList.Mvc;
@model PagedList.PagedList<SACH>*@
@foreach (var sach in Model)
{
    <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
        <div class="card product-item border-0 mb-4">
            <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                <img class="img-fluid w-100" src="~/imgs/@sach.Anhbia" alt="">
            </div>
            <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                <h6 class="text-truncate mb-3">@sach.Tensach</h6>
                <div class="d-flex justify-content-center">
                    <h6>@sach.Giaban VNĐ</h6><h6 class="text-muted ml-2"></h6>
                </div>
            </div>

            <div class="card-footer d-flex justify-content-between bg-light border">
                <a href="@Url.Action("Details", "BookStore", new { id = sach.Masach})" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1" @sach.Masach></i>Xem chi tiết</a>
                <a href="@Url.Action("Themgiohang", "Giohang", new {@iMasach= sach.Masach, @strURL=Request.Url.ToString()})" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Thêm vào giỏ hàng</a>
            </div>
        </div>
    </div>
}

